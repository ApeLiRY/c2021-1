#include<string.h>
#include<math.h>
#include<stdio.h>
#include<windows.h>
int n=5000,cnt=1,flag=1;
char c[40];
void pre(){
	printf("%s",c);system("CLS");cnt=1;
}
int main(){
	scanf("%s",&c);
	pre();
	while(n--){
		for(int i=1;i<=cnt;i++) putchar(' ');
		printf("%s",c);
		system("CLS");
		if(cnt==0)
			flag=1,pre();
		if(cnt==40) 
			flag=-1;	
		cnt+=flag;
	}
	return 0;
} 

